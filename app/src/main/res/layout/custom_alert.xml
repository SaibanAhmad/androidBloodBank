<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/custom_alert_bg"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingTop="20dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/suu"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/successs" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="THANKS"
            android:textColor="#32C24D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:text="For using This App &amp;"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Your Request for Blood Group"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:id="@+id/blood_group_requested"
            android:text="A+"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="has been successfuly submited."
            android:textSize="18sp" />
        <TextView
            android:text="we wish for speedy recovery of your Near &amp; Dear."
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_gravity="right"
                android:id="@+id/btn_requestd"
                android:layout_marginTop="10dp"
                android:text="Search Donor"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
            <Button
                android:layout_gravity="right"
                android:id="@+id/btn_requestd_"
                android:layout_marginTop="10dp"
                android:text="OK"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
        </LinearLayout>



    </LinearLayout>





</RelativeLayout>