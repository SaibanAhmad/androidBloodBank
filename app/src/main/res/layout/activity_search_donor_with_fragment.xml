<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme_fornobar"
    tools:context="com.saiban.bahawalpurblooddonors.SearchDonorWithFragment">


    <TextView
        android:id="@+id/ttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:text="Select Blood Group Looking For"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary" />

    <GridView
        android:id="@+id/findBloodGridd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ttt"
        android:clickable="true"
        android:drawSelectorOnTop="true"
        android:focusable="true"
        android:gravity="center"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/nothingTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="Nothing to show here...."
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/donor_of_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/list_length_donor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#444"
            android:textSize="16sp"
            android:visibility="invisible" />


    </RelativeLayout>
</LinearLayout>
