<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/custom_alert_bg"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/suu"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/successs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/suu"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="THANKS"
            android:textColor="#32C24D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:text="for using this app and"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="being Registered with us."
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_gravity="right"
                android:id="@+id/btn_requestd__"
                android:text="OK"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
        </LinearLayout>



    </LinearLayout>





</RelativeLayout>