<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.saiban.bahawalpurblooddonors">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".UserLogin"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_fornobar" />
        <activity
            android:name=".UserRegister"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_fornobar" />
        <activity
            android:name=".mainContent"
            android:label="@string/title_activity_main_content"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DonorProfile"
            android:parentActivityName=".mainContent" />
        <activity
            android:name=".viewRequest"
            android:parentActivityName=".mainContent"
            android:screenOrientation="portrait" />
        <activity
            android:name=".submitRequest"
            android:parentActivityName=".mainContent" />
        <activity
            android:name=".SearchDonorWithFragment"
            android:parentActivityName=".mainContent"
            android:screenOrientation="portrait" />
        <activity
            android:name=".findBBanks"
            android:parentActivityName=".mainContent"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menuActivity.bloodCompatibility"
            android:parentActivityName=".mainContent" />
        <activity
            android:name=".menuActivity.contact"
            android:parentActivityName=".mainContent" />
        <activity
            android:name=".menuActivity.editProfile"
            android:parentActivityName=".mainContent" />
        <activity
            android:name=".splash"
            android:theme="@style/AppTheme_fornobar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".donorReminder"
            android:parentActivityName=".mainContent" />
        <activity
            android:name=".loginorsignup"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_fornobar" />
        <activity
            android:name=".forgetPass"
            android:theme="@style/AppTheme_fornobar" />
        <activity
            android:name=".menuActivity.about"
            android:parentActivityName=".mainContent" />
    </application>

</manifest>